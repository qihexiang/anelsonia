{
    "lint": {
        "files": {
            "exclude": [
                "./node_modules",
                "./dist"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "files": {
            "exclude": [
                "./node_modules",
                "./dist"
            ]
        },
        "options": {
            "useTabs": false,
            "indentWidth": 4,
            "singleQuote": false,
            "lineWidth": 80
        }
    }
}
